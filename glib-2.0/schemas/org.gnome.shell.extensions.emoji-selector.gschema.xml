<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="better-osd">
  <schema id="org.gnome.shell.extensions.better-osd" path="/org/gnome/shell/extensions/better-osd/">
    <key type="i" name="horizontal">
      <default>0</default>
      <summary>Horizontal shifting (%)</summary>
      <description>The percentage of the screen width (from the center of the screen) at which the OSD will be displayed.</description>
    </key>
    <key type="i" name="vertical">
      <default>0</default>
      <summary>Vertical shifting (%)</summary>
      <description>The percentage of the screen height (from the center of the screen) at which the OSD will be displayed.</description>
    </key>
    <key type="i" name="size">
      <default>15</default>
      <summary>OSD size (screen %)</summary>
      <description>Relative OSD size.</description>
    </key>
    <key type="i" name="delay">
      <default>1000</default>
      <summary>Hide delay (ms)</summary>
      <description>How long the OSD will be displayed.</description>
    </key>
		<key type="b" name="transparency">
			<default>false</default>
			<summary>Transparency toggle</summary>
			<description>Toggle OSD transparency to on/off.</description>
		</key>
  </schema>
</schemalist>
